<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_over_background"
    tools:context=".SaveNameScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_ove_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Game Over!"
            android:fontFamily="@font/simonetta_bold"
            android:textStyle="bold"
            android:textSize="40dp"/>

        <TextView
            android:id="@+id/end_score0_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:text="Score:"
            android:fontFamily="@font/simonetta_bold"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/end_score1_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="50"
            android:fontFamily="@font/simonetta_bold"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:hint="Enter your name"
            android:fontFamily="@font/simonetta_bold"
            />

        <Button
            android:id="@+id/save_name_BTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/pink"
            android:fontFamily="@font/simonetta_bold"
            android:text="ok"/>


    </LinearLayout>

</RelativeLayout>