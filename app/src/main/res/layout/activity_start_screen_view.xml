<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StartScreenView">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_mode_BTN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/simonetta_bold"
        android:text="BUTOTON MODE" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sensor_mode_BTN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="SENSOR MODE"
        android:fontFamily="@font/simonetta_bold"
        android:layout_below="@+id/button_mode_BTN"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/top_ten_BTN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="TOP-TEN"
        android:fontFamily="@font/simonetta_bold"
        android:layout_below="@id/sensor_mode_BTN"
        android:layout_centerHorizontal="true"
        />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/fast_SWITCH"
        android:layout_below="@+id/top_ten_BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAST"
        android:fontFamily="@font/simonetta_bold"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/slow_SWITCH"
        android:layout_below="@+id/fast_SWITCH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLOW"
        android:fontFamily="@font/simonetta_bold"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sound_BTN"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/volume"
        android:tag="sound"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/slow_SWITCH"
        android:layout_centerHorizontal="true"

        />

</RelativeLayout>